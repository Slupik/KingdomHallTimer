<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import jw.kingdom.hall.kingdomtimer.javafx.custom.TimeField?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jw.kingdom.hall.kingdomtimer.view.panel.tabs.timeControl.TimeControlController">
   <HBox>
      <children>
         <Label fx:id="lblTime" text="12:43:02">
            <font>
               <Font size="53.0" />
            </font>
         </Label>
         <HBox alignment="CENTER_LEFT">
            <children>
               <Button fx:id="btnStart" mnemonicParsing="false" onAction="#onStartAction" text="Start">
                  <HBox.margin>
                     <Insets left="16.0" />
                  </HBox.margin>
               </Button>
               <Button fx:id="btnPause" mnemonicParsing="false" onAction="#onPauseAction" text="Pauza">
                  <HBox.margin>
                     <Insets left="16.0" />
                  </HBox.margin>
               </Button>
               <Button fx:id="btnStop" mnemonicParsing="false" onAction="#onStopAction" text="Stop">
                  <HBox.margin>
                     <Insets left="16.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
      </children>
   </HBox>
   <VBox>
      <children>
         <Label text="Szybkie ustawienie czasu">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <HBox>
            <children>
               <TimeField fx:id="tfFastTime" />
               <Button mnemonicParsing="false" onAction="#handleLoadTimeAction" text="Wczytaj">
                  <HBox.margin>
                     <Insets left="16.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
         <Label text="Wczytuje czas poza kolejką (ingoruje tabelkę i obecny czas)" />
      </children>
      <VBox.margin>
         <Insets bottom="16.0" />
      </VBox.margin>
   </VBox>
   <TableView prefHeight="200.0" prefWidth="200.0">
     <columns>
         <TableColumn prefWidth="75.0" text="Syngał" />
       <TableColumn prefWidth="75.0" text="Punkt" />
       <TableColumn prefWidth="75.0" text="Czas" />
     </columns>
   </TableView>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="8.0" />
   </padding>
</VBox>
